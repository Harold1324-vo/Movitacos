<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgregarAlimentosFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_gravity="center"
            android:src="@mipmap/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Agregar Producto"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#fd6918"
            android:layout_marginTop="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/background_admin"
            android:gravity="center"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/etIdProducto"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="20dp"
                        android:visibility="gone"/>

                    <EditText
                        android:id="@+id/etNombreProducto"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="20dp"
                        android:background="@drawable/while_background_edt"
                        android:drawableStart="@drawable/ic_food"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:hint="Nombre del Producto"
                        android:inputType="textPersonName"
                        android:paddingStart="10dp"
                        android:textColorHint="#000000"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/etTipoProducto"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="20dp"
                        android:background="@drawable/while_background_edt"
                        android:drawableStart="@drawable/ic_type"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:hint="Tipo del Producto"
                        android:inputType="textPersonName"
                        android:paddingStart="10dp"
                        android:textColorHint="#000000"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/etPrecioProducto"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="20dp"
                        android:background="@drawable/while_background_edt"
                        android:drawableStart="@drawable/ic_price"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:hint="Precio del Producto"
                        android:inputType="number"
                        android:paddingStart="10dp"
                        android:textColorHint="#000000"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/etFechaCreacion"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:hint="fecha creacion"
                        android:visibility="invisible"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/etFechaActualizacion"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:hint="fecha actualizacion"
                        android:visibility="invisible"
                        android:inputType="textPersonName" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <Button
            android:id="@+id/btnActualizar"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#fd6918"
            android:text="Registrar"
            android:textColor="#FFF"
            android:textSize="20sp"
            app:cornerRadius="10dp"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</FrameLayout>