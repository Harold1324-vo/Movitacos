<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PrincipalAdministradorFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/logo" />

        <TextView
            android:id="@+id/txtPruebas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="30dp"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnAgregarProductos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="32dp"
                android:layout_gravity="center"
                android:backgroundTint="#fd6918 "
                android:drawableLeft="@mipmap/taco"
                app:cornerRadius="20dp"
                android:text="Productos" />

            <Button
                android:id="@+id/btnAgregarMesas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="32dp"
                android:layout_gravity="center"
                android:backgroundTint="#fd6918 "
                android:drawableLeft="@mipmap/mesa"
                app:cornerRadius="20dp"
                android:text="Mesas" />

            <Button
                android:id="@+id/btnAgregarMeseros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="32dp"
                android:layout_gravity="center"
                android:backgroundTint="#fd6918 "
                android:drawableLeft="@mipmap/mesero"
                app:cornerRadius="20dp"
                android:text="Meseros" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>