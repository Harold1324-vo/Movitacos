<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".EiminarAlimentoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_gravity="center"
            android:src="@mipmap/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Eliminar Producto"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#fd6918"
            android:layout_marginTop="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/background_admin"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etIdTaqueria"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:visibility="gone"/>

                <EditText
                    android:id="@+id/etIdProducto"
                    android:layout_width="240dp"
                    android:layout_height="50dp"
                    android:background="@drawable/while_background_edt"
                    android:drawableStart="@drawable/ic_id"
                    android:drawablePadding="10dp"
                    android:hint="Id Producto"
                    android:inputType="number"
                    android:paddingStart="10dp"
                    android:ems="10"
                    android:textColorHint="#000000"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/btnBuscarId"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ic_search"
                    android:contentDescription="@string/app_name" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre del producto"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textColor="#fff"
                    android:layout_margin="5dp"/>

                <TextView
                    android:id="@+id/etNombreProducto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:textColor="#000"
                    android:layout_margin="5dp"/>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tipo del producto"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textColor="#fff"
                    android:layout_margin="5dp"/>

                <TextView
                    android:id="@+id/etTipoProducto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:textColor="#000"
                    android:layout_margin="5dp"/>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Precio del alimento"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textColor="#fff"
                    android:layout_margin="5dp" />

                <TextView
                    android:id="@+id/etPrecioProducto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textColor="#000"
                    android:layout_margin="5dp" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#fd6918"
            android:text="Eliminar"
            android:textColor="#FFF"
            android:textSize="20sp"
            app:cornerRadius="10dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
</FrameLayout>